#%Module 1.0 -*- tcl -*-

set name synopsys-2015

proc ModulesHelp { } {
    global name
    puts stderr "\tThis module loads $name\n"
}

module-whatis "Add $name module"

module use --append $env(KAUST_MODULES_ROOT)/$name

if { [module-info mode load] } {
    puts stderr "Loading module for $name"
    puts stderr "$name modules now loaded"
    set-alias CDE {module load $name && module load customdesigner && cdesigner}
}

if { [module-info mode remove] } {
    puts stderr "Unloading module for $name"
    puts stderr "$name modules now unloaded"
    unset-alias CDE
}
